<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/menu_background"/>
            <padding
                    android:bottom="@dimen/item_press_padding"
                    android:left="@dimen/item_press_padding"
                    android:right="@dimen/item_press_padding"
                    android:top="@dimen/item_press_padding"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/item_press_radius"/>
            <solid android:color="@color/gray_5a"/>
        </shape>
    </item>

</layer-list>